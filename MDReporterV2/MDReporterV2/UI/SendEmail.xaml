<Window x:Class="MDReporterV2.UI.SendEmail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sending Email" Height="205" Width="318">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <CheckBox Name="ToMe" VerticalAlignment="Center" Content="To Me:" Width="75" Margin="12,15,223,14"/>
            <TextBox Name="ToAddress" VerticalAlignment="Center" Width="200" Margin="87,12,23,14"/>
        </Grid>
        <Grid Grid.Row="1">
            <CheckBox Name="ToMore" VerticalAlignment="Center" Content="To More:" Width="75" Margin="12,12,223,17"/>
            <TextBox Name="ToMoreAddress" VerticalAlignment="Center" Width="200" Margin="87,12,23,14"/>
        </Grid>
        <Grid Grid.Row="2">
            <Label Content="And CC:" Margin="32,5,223,12" VerticalAlignment="Center"/>
            <TextBox x:Name="CCAddress" VerticalAlignment="Center" Margin="87,9,23,16" Width="200"/>
        </Grid>
        <Grid Grid.Row="3">
            <Button Name="checkName" Content="Check" Width="65" Height="25" Margin="128,9,117,9"/>
            <Button Name="send" Content="Send" Width="65" Height="25" Margin="221,9,24,9"/>
        </Grid>
    </Grid>
</Window>
